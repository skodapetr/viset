{
  "metadata": {
    "id": "atom-pairs_tanimoto_max-fusion",
    "label": "Atom pairs, Tanimoto, max-fusion",
    "description": "Use Atom Pairs fingerprint with Tanimoto and max-fusion strategy.",
    "version": 1
  },
  "user_interface": {
    "input": {
      "actives.sdf": {
        "label": "Active molecules"
      },
      "database.sdf": {
        "label": "Library to screen"
      }
    },
    "output": {
      "scores.json": {
        "label": "Molecular score"
      }
    }
  },
  "workflow": [
    {
      "id": "rdkit/atom-pairs",
      "type": "representation",
      "ports": {
        "database_file": "input/actives.sdf",
        "output_file": "working/actives.json"
      }
    },
    {
      "id": "rdkit/atom-pairs",
      "type": "representation",
      "ports": {
        "database_file": "input/database.sdf",
        "output_file": "working/database.json"
      }
    },
    {
      "id": "rdkit/tanimoto",
      "type": "similarity",
      "ports": {
        "query_file": "working/actives.json",
        "database_file": "working/database.json",
        "output_file": "working/similarity.json"
      }
    },
    {
      "id": "max-fusion",
      "type": "fusion",
      "ports": {
        "database_file": "working/similarity.json",
        "output_file": "output/scores.json"
      }
    }
  ]
}
