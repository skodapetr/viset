{
  "metadata": {
    "id": "maccs_tanimoto_max-fusion",
    "label": "MACCS, Tanimoto, max-fusion",
    "description": "Use MACCS fingerprint with Tanimoto and max-fusion strategy.",
    "version": 1
  },
  "user_interface": {
    "input": {
      "actives.sdf": {
        "label": "Active molecules"
      },
      "database.sdf": {
        "label": "Library to screen"
      }
    },
    "output": {
      "scores.json": {
        "label": "Molecular score"
      }
    }
  },
  "workflow": [
    {
      "id": "rdkit/maccs",
      "type": "representation",
      "ports": {
        "database_file": "input/actives.sdf",
        "output_file": "working/actives.json"
      },
      "configuration": { }
    },
    {
      "id": "rdkit/maccs",
      "type": "representation",
      "ports": {
        "database_file": "input/database.sdf",
        "output_file": "working/database.json"
      },
      "configuration": { }
    },
    {
      "id": "rdkit/tanimoto",
      "type": "similarity",
      "ports": {
        "query_file": "working/actives.json",
        "database_file": "working/database.json",
        "output_file": "working/similarity.json"
      }
    },
    {
      "id": "max-fusion",
      "type": "fusion",
      "ports": {
        "database_file": "working/similarity.json",
        "output_file": "output/scores.json"
      }
    }
  ]
}
